@model IEnumerable<WebApplication1.Models.OrderTable>

@{

}

<h4>Orders</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                ₺@Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <a asp-action="Index" asp-controller="OrderLines" asp-route-id="@item.OrderId" style="font-weight : bold">Order Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>