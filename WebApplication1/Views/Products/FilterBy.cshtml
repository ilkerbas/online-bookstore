@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewData["Title"] = "AddToChart";
    ViewData["Title"] = "Index";
}

<h2>Books & Magazines</h2>


<table class="table">
    <div class="row">

        <div class="col-lg-3">

            <br />
            <form asp-action="Search">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input name="SearchString" class="form-control" placeholder="Search by Title..." />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
            <div class="list-group">
                <a asp-action="BooksDetails" asp-controller="Products" class="list-group-item">Book</a>
                <a asp-action="MagazinesDetails" asp-controller="Products" class="list-group-item">Magazine</a>
                <!-- Default dropright button -->
                <div class="btn-group dropright">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Filter by
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Turkish">Turkish</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="English">English</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Classic">Classic</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Fiction">Fiction</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Science Fiction">Science Fiction</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Drama">Drama</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Under ₺10" asp-route-num="10">Under ₺10</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Under ₺20" asp-route-num="20">Under ₺20</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Under ₺50" asp-route-num="50">Under ₺50</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Under ₺100" asp-route-num="100">Under ₺100</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Under 500 Pages" asp-route-num="500">Under 500 Pages</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="Under 1000 Pages" asp-route-num="1000">Under 1000 Pages</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="3 stars and above" asp-route-num="3">3 stars and above</a>
                        <a class="dropdown-item" asp-action="FilterBy" asp-route-parameter="4 stars and above" asp-route-num="4">4 stars and above</a>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="https://images.unsplash.com/photo-1463320726281-696a485928c7?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mnx8Ym9va3N0b3JlfGVufDB8fDB8&ixlib=rb-1.2.1&w=1000&q=80" style="height:350px;width:900px" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="https://images.unsplash.com/photo-1507842217343-583bb7270b66?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxleHBsb3JlLWZlZWR8MXx8fGVufDB8fHw%3D&w=1000&q=80" style="height:350px;width:900px" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="https://images.unsplash.com/photo-1516179257071-71a54dbb4853?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8bWFnYXppbmV8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&w=1000&q=80" style="height:350px;width:900px" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        @foreach (var item in Model)
        {

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    @if (item.ProductType.Equals("Book"))
                    {
                        <a asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductId"><img class="card-img-top" src="https://mir-s3-cdn-cf.behance.net/project_modules/1400/0ab10c33189311.56a2ff3b4eb9c.jpg" alt=""></a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductId"><img class="card-img-top" src="https://mir-s3-cdn-cf.behance.net/project_modules/fs/4bcdcc59074979.5a15a5699c4ff.jpg" alt=""></a>

                    }

                    <div class="card-body">
                        <h4 class="card-title">
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.Title)</a>
                        </h4>
                        <h5>
                            ₺@Html.DisplayFor(modelItem => item.Price)
                            <a asp-action="AddToChart" asp-route-id="@item.ProductId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 16 16">
                                    <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z" />
                                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                </svg>
                            </a>
                            <a asp-action="AddToWishList" asp-route-id="@item.ProductId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-card-checklist" viewBox="0 0 16 16">
                                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                                    <path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z" />
                                </svg>
                            </a>
                        </h5>

                        <p class="card-text">
                            @Html.DisplayFor(modelItem => item.Author.AuthorName)
                        </p>
                    </div>
                    <div class="card-footer">
                        @if (item.Rating == 1)
                        {
                            <small class="text-muted">&#9733; &#9734; &#9734; &#9734; &#9734;</small>}
                        else if (item.Rating == 2)
                        {
                            <small class="text-muted">&#9733; &#9733; &#9734; &#9734; &#9734;</small>}
                        else if (item.Rating == 3)
                        {
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9734; &#9734;</small>}
                        else if (item.Rating == 4)
                        {
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>}
                        else if (item.Rating == 5)
                        {
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9733;</small>}
                        else
                        {
                            <small class="text-muted">&#9734; &#9734; &#9734; &#9734; &#9734;</small>
                        }

                    </div>
                </div>
            </div>

        }
    </div>
</table>


